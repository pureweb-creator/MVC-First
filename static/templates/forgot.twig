{%
    include 'inc/header.twig' with
    {
        'title': page_title,
        'user': logged_user,
        'app_id': app_id,
        'root': root
    }
%}
<main id="resetPassword">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <br>
                <h1 class="mb3">{{ page_title }}</h1>
                <br>
            </div>
            <div class="col-lg-5 col-12 m-auto">
                <form @submit.prevent="doReset" class="form">
                    <p class="help text-danger" v-if="errors['noUserExists']">[[ errors.errorsMessage ]]</p>
                    <p class="help text-danger" v-if="errors['wrongEmail']">[[ errors.errorsMessage ]]</p>
                    <p class="help text-danger" v-if="errors['notSent']">[[ errors.errorsMessage ]]</p>
                    <p class="help text-success" v-if="errors['success']">[[ errors.errorsMessage ]]</p>
                    <p class="input-group">
                        <input type="text" class="form-control" placeholder="E-mail" v-model="email">
                    </p>
                    <p class="input-group">
                        <button class="btn btn-success" type="submit">Send</button>
                    </p>

                    <span class="help text-danger" v-if="errors.smthWentWrong == true">[[ errors.errorsMessage ]]</span>
                </form>
            </div>
        </div>
    </div>
</main>

{%
    include 'inc/footer.twig' with
    {
        'root': root
    }
%}